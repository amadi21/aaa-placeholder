{
  "packageRules": [
    {
      "description": "Disable all packages from updating",
      "packagePatterns": ["*"],
      "enabled": false
    },
    {
      "description": "Re-enable com.netflix.hystrix packages",
      "packagePatterns": ["^com\\.netflix\\.hystrix"],
      "enabled": true
    },
    {
      "description": "Disable snapshot versions from updating",
      "matchCurrentVersion": "/-SNAPSHOT$/",
      "enabled": false
    }
  ]
}
